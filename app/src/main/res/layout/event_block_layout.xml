<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/singleEventBlock"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/eventBlockBackground"
    android:orientation="vertical"
    android:clickable="true"
    android:onClick="onEventBlockClick">

    <TextView
        android:id="@+id/idHolder"
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/eventBlockTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/border"
            android:padding="4dp"
            android:text="@string/eventTitleHint"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <TextView
            android:id="@+id/eventBlockStartingTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@drawable/border"
            android:padding="4dp"
            android:text="00:00"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <TextView
            android:id="@+id/eventBlockDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@drawable/border"
            android:padding="4dp"
            android:textAppearance="@style/TextAppearance.AppCompat" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/eventBlockDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:padding="4dp"
            android:text="@string/eventDetails"
            android:textAppearance="@style/TextAppearance.AppCompat" />

    </LinearLayout>

</LinearLayout>
